<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
    </style>


    <style name="MyTextStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="filmStyle"  parent="Theme.MaterialComponents.Light">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">105dp</item>
    </style>

    <style name="imagePadding" parent="Theme.MaterialComponents.Light">
        <item name="android:padding">8dp</item>
    </style>

    <style name="imageStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">150dp</item>
    </style>


    <style name="starStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
    </style>


</resources>